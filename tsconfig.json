{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true
  },
  "exclude": ["**/node_modules", "**/dist", "**/build", "**/coverage"]
}
